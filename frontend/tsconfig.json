{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./frontend/components/*"],
      "@/features/*": ["./frontend/features/*"],
      "@/features/home/components": ["./frontend/src/features/home/components.ts"],
      "@/features/home/components/*": ["./frontend/features/home/components/*", "./frontend/components/home/sections/*"],
      "@/ui/*": ["./frontend/components/ui/*"],
      "@/decorative/*": ["./frontend/components/decorative/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "backend",
    "dist",
    "build",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
